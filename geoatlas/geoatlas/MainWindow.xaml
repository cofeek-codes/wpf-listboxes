                <RadioButton Content="Europe"/>
                <RadioButton Content="Africa"/>
                <RadioButton Content="North America"/>
                <RadioButton Content="South America"/>
                <RadioButton Content="Australia"/>
        </ListBox>
        
        <GroupBox Header="Cities" Margin="199,10,10,-1"/>
        <ComboBox HorizontalAlignment="Left" Margin="296,36,0,0" VerticalAlignment="Top" Width="196">
            // australia
            <TextBlock Text="Canberra"></TextBlock>
            <TextBlock Text="Sidney"></TextBlock>
            // america
            <TextBlock Text="Pekin"></TextBlock>
            <TextBlock Text="Sidney"></TextBlock>
        </ComboBox>

    </Grid>
</Window>
